---
import ThemeToggle from "./ThemeToggle.astro";
---

<div class="nav-links">
    <div class="links">
        <a href="/"><span class="my-name">Santiago Valencia</span></a>
        <a href="/about/">About</a>
    </div>

    <div class="icons">
        <ThemeToggle />
        <a href="/rss.xml">
            <svg class="rss-icon" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><title id="rss-title">RSS Feed</title><path d="M4 11a9 9 0 0 1 9 9"></path><path d="M4 4a16 16 0 0 1 16 16"></path><circle cx="5" cy="19" r="1"></circle></svg>
        </a>
    </div>
</div>

<style>
    .rss-icon {
        width: 22px;
        height: 22px;
        fill: none;
        stroke: black;
    }

    .icons {
        display: flex;
        align-items: center;
        width: 70px;
        justify-content: space-between;
    }

    .icons a {
        all: unset;
    }

    .my-name {
        font-family: 'Barlow', sans-serif;
        font-weight: 500;
        color: rgb(55, 55, 133);
    }

    html.dark .my-name {
        color: rgb(255, 255, 255);
    }

    .nav-links a {
        display: block;
        padding: 10px 0;
        font-family: 'Barlow', sans-serif;
        font-weight: 400;
        text-decoration-line: none;
        color: black;
        font-size: 1.2em;
    }

    .nav-links {
        width: 100%;
        display: none;
    }

    .links {
        margin-top: 30px;;
    }
    
    .expanded {
        display: unset;
    }

    @media screen and (min-width: 636px) {

        .nav-links {
            display: flex;
            justify-content: space-between;
            height: 50px;
        }

        .nav-links a {
            margin-right: 20px;
            display: inline-block;
        }

        .nav-links a:last-child {
            margin-right: 0;
        }

        .links {
            margin-top: 0;
        }

    }
</style>